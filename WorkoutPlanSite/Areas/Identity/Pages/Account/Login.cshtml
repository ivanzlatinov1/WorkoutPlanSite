@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center mt-5">
    <h1 class="row justify-content-center"></h1>
</div>
<div class="row justify-content-center mt-2">
    <h1 class="row justify-content-center"></h1>
</div>

<div class="row">
    <div class="col-md-4 mx-auto">
        <section>
            <form id="account" method="post">
                <h2 class="row justify-content-center">@ViewData["Title"]</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                    <label asp-for="Input.Username">Username or email address</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <!--
                                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-12 mx-auto">
                        <a class="btn btn-lg btn-secondary w-100" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="margin-top: 10px;">Register as a new user</a>
                    </div>
                </div>


            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model EquipmentViewModel
@{
}

<div class="container">
    <div class="card">
        <div class="card-header">@Model.Name</div>
        <div class="card-body">
            @Model.Type
            @Model.Weight
            <img src="@Model.ImageUrl" />
            <a class="btn btn-warning" asp-controller="Equipment" asp-action="Edit" asp-route-id="@Model.Id">Click to edit</a>
            <form asp-controller="Equipment" asp-action="Delete" method="post" asp-route-id="@Model.Id">
                <input type="submit" class="btn btn-danger" value="Delete"/>
            </form>
        </div>
        <div class="card-footer">@Model.Plan</div>
    </div>
</div>